## General options
set header_cache = "~/.cache/mutt"
set imap_check_subscribed
set imap_keepalive = 300
unset imap_passive
set mail_check = 60
set mbox_type=Maildir

set editor = jmacs

macro index \e1 '<sync-mailbox><enter-command>source ~/.mutt/personal<enter><change-folder>!<enter>'
macro index \e2 '<sync-mailbox><enter-command>source ~/.mutt/work<enter><change-folder>!<enter>'

#bind index \CN sidebar-next
#bind index \CP sidebar-prev
#bind index \CO sidebar-open

source "gpg -dq ~/.pwds.gpg |"
unset ssl_verify_host

mailboxes imaps://imap.gmail.com/INBOX imaps://imap.antek-aad.com/INBOX
set certificate_file=~/.mutt-certs

account-hook gmail.com 'set imap_user=luca.ognibene imap_pass=$my_pw_gmail'
account-hook antek-aad.com 'set imap_user=ognibene@antek-aad.com imap_pass=$my_pw_work'

folder-hook 'gmail.com' 'source ~/.mutt/personal'
folder-hook 'antek-aad.com' 'source ~/.mutt/work'
# switch to default account on startup
source ~/.mutt/personal